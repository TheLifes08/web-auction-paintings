html
    head
        meta(charset="utf-8")
        title Аукцион картин - Картины
        include head.pug
        script(type="text/javascript", src="/public/scripts/paintings.min.js")

    body(class="w3-light-grey")
        include header.pug

        section(class="w3-container")
            div(class="w3-panel w3-white w3-border w3-col")
                h4 Список картин
                table(class="w3-table-all w3-margin-bottom")
                    thead
                        tr(class="w3-indigo")
                            th(class="w3-right-align") ID
                            th Название
                            th Автор
                            th(class="w3-center") Стартовая цена
                            th(class="w3-center") Выставлена на аукцион
                            th

                    tbody(id="paintings-table-body")
