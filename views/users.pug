html
    head
        meta(charset="utf-8")
        title Аукцион картин - Пользователи
        include head.pug
        script(type="text/javascript", src="/public/scripts/users.min.js")

    body(class="w3-light-grey")
        include header.pug

        div(id="modal-update-user", class="w3-modal")
            div(class="w3-modal-content w3-card-4 w3-animate-zoom")
                header(class="w3-container w3-indigo")
                    span(onclick="closeUpdateForm();", class="w3-button w3-display-topright") &times;
                    h4 Изменить пользователя

                div(class="w3-container w3-white")
                    div(class="w3-section")
                        label(class="w3-text-gray") Баланс
                        input(id="update-user-form-balance", class="w3-input w3-border", type="number")
                    div(class="w3-section")
                        label(class="w3-text-gray") Участвует в аукционе?
                        input(id="update-user-form-participate", class="w3-input", type="checkbox")
                    button(id="update-user-form-submit", class="w3-indigo w3-button w3-block w3-border w3-margin-bottom") Обновить
                    div(id="update-user-form-message", class="w3-panel w3-display-container display-none")
                        span(id="update-user-form-message-close", class="w3-button w3-display-topright") &times;
                        p(id="update-user-form-message-p")

        section(class="w3-container")
            div(class="w3-panel w3-white w3-border w3-col")
                h4 Список пользователей
                table(class="w3-table-all w3-margin-bottom")
                    thead
                        tr(class="w3-indigo")
                            th(class="w3-right-align") ID
                            th Имя пользователя
                            th(class="w3-center") Баланс
                            th(class="w3-center") Участвует в аукционе
                            th

                    tbody(id="users-table-body")
